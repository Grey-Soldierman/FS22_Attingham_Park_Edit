<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="wardrobe" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>Wardrobe Trigger</name>
        <functions>
        </functions>
        <image>maps/placeables/storeImage/wardrobe.dds</image>
        <canBeSold>true</canBeSold>
        <showInStore>false</showInStore>
        <price>1</price>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>farmhouses</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>farmhouses</tab>
        </brush>

        <storeIconRendering>
            <settings cameraXRot="-15" cameraYRot="135" />
        </storeIconRendering>
        <vertexBufferMemoryUsage>1792</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>512</indexBufferMemoryUsage>
        <textureMemoryUsage>262144</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <boughtWithFarmland>true</boughtWithFarmland>		
        <filename>maps/placeables/wardrobeTriggerPlaceable.i3d</filename>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" />

    <clearAreas></clearAreas>

    <leveling></leveling>

    <indoorAreas></indoorAreas>

    <ai>
        <updateAreas></updateAreas>
    </ai>

    <wardrobe triggerNode="wardrobePlayerTrigger" allowAllFarms="true"/>

    <triggerMarkers>
        <triggerMarker node="wardrobePlayerTriggerMarker" filename="$data/shared/assets/marker/markerIcons.xml" id="EXCLAMATION_MARK" adjustToGround="true" />
    </triggerMarkers>

    <i3dMappings>
        <i3dMapping id="wardrobePlayerTrigger" node="0>0" />
        <i3dMapping id="wardrobePlayerTriggerMarker" node="0>1" />
    </i3dMappings>
</placeable>
